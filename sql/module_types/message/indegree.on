select cid, avg(indeg) message_avg_indegree
  from
    (select m_community_id cid, recipient_id, count(distinct(timestamp)) indeg
    from vs_reporting.user_memberships u
    join
      (select recipient.id recipient_id, sender.id sender_id, timestamp
      from `hipyard_analytics_production.message_events_partitioned`) t on u.user_id = m.recipient_id
    group by cid, recipient_id)
  group by cid
